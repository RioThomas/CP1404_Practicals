BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            size_hint_x: 1
            text: app.input
            font_size: 48
            on_text: app.handle_conversion(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(+1)
                on_press: app.handle_conversion(input_number.text)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.handle_conversion(input_number.text)
    # Button:
        # text: "Convert a number from miles to kilometers:"
        # on_press: app.handle_conversion(int(input_number.text))
    Label:
        id: output_label
        text: app.output
        color: (1, 0, 0.5, 1)
        font_size: 48
